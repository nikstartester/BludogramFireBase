<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:fragment="com.example.nikis.bludogramfirebase.Profile.CreateNewProfile"
    tools:showIn="@layout/activity_edit_profile">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/circularImageView"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp">

                <EditText
                    android:id="@+id/edt_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:hint="Login"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <ImageView
                android:id="@+id/circularImageView"
                android:layout_width="108dp"
                android:layout_height="108dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="false"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_add_a_photo_blue_108dp" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/circularImageView"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_toEndOf="@+id/circularImageView">

                <EditText
                    android:id="@+id/edt_firstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:ems="10"
                    android:hint="First name"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/inputLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textInputLayout"
                android:layout_below="@+id/textInputLayout"
                android:layout_marginEnd="16dp">

                <EditText
                    android:id="@+id/edt_lastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_alignBottom="@+id/inputLayout2"
                    android:layout_alignStart="@+id/inputLayout2"
                    android:ems="10"
                    android:hint="Last name"
                    android:inputType="textPersonName"
                    android:textSize="15sp" />
            </android.support.design.widget.TextInputLayout>

            <RadioButton
                android:id="@+id/radBtn_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/circularImageView"
                android:layout_below="@+id/textInputLayout0"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:text="Male"
                android:textSize="15sp" />

            <RadioButton
                android:id="@+id/radBtn_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/inputLayout2"
                android:layout_below="@+id/textInputLayout0"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="fill"
                android:text="Female"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/radBtn_male"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Your cooking skill:"
                android:textSize="15sp" />

            <SeekBar
                android:id="@+id/seekBar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignTop="@+id/textView2"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="6dp"
                android:layout_toEndOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/seekBar2"
                android:layout_below="@+id/seekBar2"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical|start"
                android:text="Baby" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_alignEnd="@+id/seekBar2"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical|end"
                android:text="Chef" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_below="@+id/textView2"
                android:layout_marginStart="16dp"
                android:paddingTop="4dp"
                android:text="(Optional)" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <include layout="@layout/content_filter"/>

</RelativeLayout>
