<?xml version="1.0" encoding="utf-8"?>
    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/root8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:animationCache="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imgView_chooseTimeMain"
                    android:layout_alignTop="@+id/imgView_chooseTimeMain"
                    android:layout_toEndOf="@+id/imgView_chooseTimeMain"
                    android:gravity="center"
                    android:text="All time cooking: "
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imgView_chooseTimeMain"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_access_time_blue_48dp" />

                <Button
                    android:id="@+id/btn_chooseTimeMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tv_timeMain"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/tv_timeMain"
                    android:layout_marginEnd="16dp"
                    android:background="@color/colorAccent"
                    android:text="Choose"
                    android:textColor="@color/cardview_light_background" />

                <TextView
                    android:id="@+id/tv_timeMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/textView10"
                    android:layout_alignTop="@+id/textView10"
                    android:layout_toEndOf="@+id/textView10"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="15sp" />
            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Steps of cooking: "
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_steps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical" />

            <Button
                android:id="@+id/btn_addStep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@color/colorAccent"
                android:text="Add step"
                android:textColor="@color/cardview_light_background" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
