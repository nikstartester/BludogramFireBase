<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="center">
        <shape android:shape="oval">
            <size
                android:height="@dimen/camera_dialog_capture_button_size"
                android:width="@dimen/camera_dialog_capture_button_size" />
            <stroke
                android:color="@color/accent"
                android:width="3dp" />
        </shape>
    </item>
    <item
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp"
        android:top="6dp">
        <shape android:shape="oval">
            <solid android:color="@color/md_grey_200" />
        </shape>
    </item>
</layer-list>